<% my_id, sub_id = two_select[:id], "sub_#{two_select[:id]}" %>
<div class="selector">
  <%= label_tag my_id, t(:selected), :class => 'sublabel' %> <br />
  <%= select_tag(my_id, options_for_select(two_select[:selected].map {|item| [item.display_name, item.id]}), {:size => '5', :id => my_id, :multiple => true}) %>
  <br />
  <%= link_to_function(t(:remove_selected), "mu_two_select_remove('#{my_id}', '#{sub_id}')") %>
</div>
<%= render :partial => "shared/obj_select", :object => {:items => two_select[:items], :id => sub_id, :label => :all, :link => link_to_function(t(:add_selected), "mu_two_select_add('#{my_id}', '#{sub_id}')")} %>
<div class='clearer'>&nbsp;</div>
