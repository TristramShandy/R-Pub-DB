<h1>Listing journals</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Publisher</th>
    <th>Issn</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @journals.each do |journal| %>
  <tr>
    <td><%= journal.name %></td>
    <td><%= journal.publisher %></td>
    <td><%= journal.issn %></td>
    <td><%= journal.url %></td>
    <td><%= link_to 'Show', journal %></td>
    <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
    <td><%= link_to 'Destroy', journal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

