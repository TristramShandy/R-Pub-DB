    <%= f.text_field :conference %>
  </div>
  <div class="field hidden" id="scope_jour">
    <%= f.label :journal %><br />
    <%= f.text_field :journal %>
  </div>
  <div class="field hidden" id="scope_book">
    <%= f.label :book %><br />
    <%= f.text_field :book %>
  </div>
  <div class="field">
    <%= f.label :abstract %><br />
    <%= f.text_area :abstract %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :pdf %><br />
    <%= f.text_field :pdf %>
  </div>
  <div class="field">
    <%= f.label :doi %><br />
