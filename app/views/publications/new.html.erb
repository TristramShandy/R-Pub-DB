<h1><%= t :new_publication %></h1>

<%= form_for(@publication) do |f| %>
  <div class="field">
    <%= f.label t(:title) %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= t(:author, :count => 2) %><br />
    <% if @err_no_authors %>
      <div class='field_with_errors'>
    <% end %>
    <%= render :partial => "shared/two_select", :object => {:items => Author.all, :selected => @default_authors, :id=>"select_author"} %>
    <% if @err_no_authors %>
      </div>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :abstract %><br />
    <%= f.text_area :abstract %>
  </div>
  <div class="actions">
    <%= f.submit :onclick => "mu_select_all('select_author'); return true;" %>
  </div>
<% end %>

<%= link_to t(:back), publications_path %>
