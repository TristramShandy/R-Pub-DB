<h1>Listing calls</h1>

<table>
  <tr>
    <th>Conference</th>
    <th>Journal</th>
    <th>Book</th>
    <th>Deadline</th>
    <th>Url</th>
    <th>Guest editor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @calls.each do |call| %>
  <tr>
    <td><%= call.conference %></td>
    <td><%= call.journal %></td>
    <td><%= call.book %></td>
    <td><%= call.deadline %></td>
    <td><%= call.url %></td>
    <td><%= call.guest_editor %></td>
    <td><%= link_to t(:show), call %></td>
    <td><%= link_to t(:edit), edit_call_path(call) %></td>
    <td><%= link_to 'Destroy', call, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

