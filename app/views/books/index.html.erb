<h1><%= t :listing_books %></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Publisher</th>
    <th>Editor</th>
    <th>Year</th>
    <th>Isbn</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.publisher %></td>
    <td><%= book.editor %></td>
    <td><%= book.year %></td>
    <td><%= book.isbn %></td>
    <td><%= link_to t(:show), book %></td>
    <td><%= link_to t(:edit), edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

