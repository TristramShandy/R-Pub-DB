<div class="form">
  <fieldset>
    <legend><%= t :please_log_in %></legend>
    <%= form_tag do %>
      <table>
        <tr>
          <td><label for="name"><%= t :name %></label></td>
          <td><%= text_field_tag :name, params[:name] %></td>
        </tr>
        <tr>
          <td><label for="password"><%= t :password %></label></td>
          <td><%= password_field_tag :password, params[:password] %></td>
        </tr>
      </table>
      <%= submit_tag(t :login) %>
    <% end %>
  </fieldset>
</div>
